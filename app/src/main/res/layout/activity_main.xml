<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bubbles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true"
        android:clipToPadding="false">

        <!-- Chenar alb mic și centrat -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#99FFFFFF"
            android:padding="24dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp">

            <!-- Titlu -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkinWise"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#6FC9BE"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular" />

            <!-- Butoane stilizate -->
            <Button
                android:id="@+id/openSearchButton"
                style="@style/AccentButton"
                android:text="🔍 Căutare produs"
                android:layout_width="260dp" />

            <Button
                android:id="@+id/openFavoritesButton"
                style="@style/AccentButton"
                android:text="❤️ Favorite"
                android:layout_width="260dp" />

            <Button
                android:id="@+id/openEducationButton"
                style="@style/AccentButton"
                android:text="📚 Ghid educațional"
                android:layout_width="260dp" />

            <Button
                android:id="@+id/openSkinTypeQuizButton"
                style="@style/AccentButton"
                android:text="🧬 Ce tip de piele am?"
                android:layout_width="260dp" />

            <Button
                android:id="@+id/btnRoutine"
                style="@style/AccentButton"
                android:text="🧴 Rutina mea"
                android:layout_width="260dp" />

            <Button
                android:id="@+id/btnRoutineTracker"
                style="@style/AccentButton"
                android:text="📅 Urmărește rutina săptămânală"
                android:layout_width="260dp"
                android:layout_marginBottom="0dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Buton profil -->
    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button_bg"
        android:src="@drawable/ic_profile"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:contentDescription="Profil"
        android:backgroundTint="#F0F0F0" />
</RelativeLayout>
