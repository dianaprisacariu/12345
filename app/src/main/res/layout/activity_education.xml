<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bubbles"
    tools:context=".view.EducationActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#F7F9F2"
        android:titleTextColor="#F7F9F2"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/educationRecyclerView"
        android:layout_below="@id/topAppBarEducation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="false" />


</RelativeLayout>
